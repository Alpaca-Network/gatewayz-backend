  "normalization_rules": {
    "description": "Rules for normalizing all pricing to per-token format",
    "target_format": "USD per single token",
    "conversions": {
      "per_1K_tokens": {
        "formula": "price_per_1K / 1000",
        "example": "$0.50 per 1K tokens = $0.0005 per token"
      },
      "per_1M_tokens": {
        "formula": "price_per_1M / 1000000",
        "example": "$1.00 per 1M tokens = $0.000001 per token"
      },
      "amount_scale": {
        "formula": "amount × 10^scale",
        "example": "amount=1, scale=-6 → 1 × 10^-6 = $0.000001 per token"
      }
    }
  }
