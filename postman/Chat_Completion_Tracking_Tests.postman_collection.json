{
  "info": {
    "name": "Chat Completion Request Tracking Tests",
    "description": "Test suite for verifying chat completion request tracking across all endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "your-api-key-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Chat Endpoints",
      "item": [
        {
          "name": "Chat Completions - Non-Streaming",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"gpt-4o-mini\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Test 1: Chat completions non-streaming - tracking verification\"\n    }\n  ],\n  \"max_tokens\": 50,\n  \"temperature\": 0.7\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/chat/completions",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "chat", "completions"]
            }
          }
        },
        {
          "name": "Chat Completions - Streaming",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"gpt-4o-mini\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Test 2: Chat completions streaming - tracking verification\"\n    }\n  ],\n  \"stream\": true,\n  \"max_tokens\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/chat/completions",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "chat", "completions"]
            }
          }
        },
        {
          "name": "Unified Responses",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"gpt-4o-mini\",\n  \"input\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Test 3: Unified responses - tracking verification\"\n    }\n  ],\n  \"max_tokens\": 50,\n  \"temperature\": 0.7\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/responses",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "responses"]
            }
          }
        },
        {
          "name": "Anthropic Messages",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"claude-sonnet-4-5-20250929\",\n  \"max_tokens\": 100,\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Test 4: Anthropic Messages - tracking verification\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/messages",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "messages"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Verification Endpoints",
      "item": [
        {
          "name": "Get Recent Chat Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/monitoring/chat-requests?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "monitoring", "chat-requests"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Request Counts by Model",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/monitoring/chat-requests/counts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "monitoring", "chat-requests", "counts"]
            }
          }
        },
        {
          "name": "Get Models with Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/monitoring/chat-requests/models",
              "host": ["{{baseUrl}}"],
              "path": ["api", "monitoring", "chat-requests", "models"]
            }
          }
        },
        {
          "name": "Get Tokens Per Second Metrics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/chat/completions/metrics/tokens-per-second",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "chat", "completions", "metrics", "tokens-per-second"]
            }
          }
        }
      ]
    },
    {
      "name": "3. User Info",
      "item": [
        {
          "name": "Get API Keys",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["user", "api-keys"]
            }
          }
        },
        {
          "name": "Get User Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/balance",
              "host": ["{{baseUrl}}"],
              "path": ["user", "balance"]
            }
          }
        }
      ]
    }
  ]
}
